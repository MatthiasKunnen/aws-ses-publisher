{
    "compileOnSave": false,
    "compilerOptions": {
        "alwaysStrict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2016",
            "es2017",
            "es2018",
            "es2019",
            "esnext.asynciterable"
        ],
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./out-tsc",
        "sourceMap": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "es2019",
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ]
    },
    "files": [
        "src/cli.ts",
        "src/index.ts"
    ]
}
